        <div class="container">
            
            <div class="form-group">
                <label for="txtChannelName">Message</label>
                <input runat="server" id="txtMessage" placeholder="Message" class="form-control" value="@Model.message" asp-for="@Model.message"/>
            </div>

            <div class="form-check">
                <input type="checkbox" id="isActive" checked="@Model.isActive" asp-for="@Model.isActive"/>
                <label for="isActive">Show</label><br>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" id="btnSave" onclick="return checkValidation();" value="Save">
                <input type="submit" class="btn btn-default" ID="btnCancel" value="Cancel" />
            </div>
        </div>

        <script type="text/javascript">
            function checkValidation() {
                var channelName = document.getElementById("txtMessage").value;

